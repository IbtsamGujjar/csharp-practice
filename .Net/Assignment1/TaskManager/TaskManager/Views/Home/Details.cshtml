@model TaskManager.Models.Task;

@{
    ViewBag.Title = "Task Details";
}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header text-center">
                <h1>@Model.Title</h1>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-4">
                        <h4>Description:</h4>
                    </div>
                    <div class="col-sm-8">
                        @Model.Description
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm">
                        <h4>Status: @Model.Status</h4>
                    </div>
                    <div class="col-sm">
                        <h4>Priorty: @Model.Priorty</h4>
                    </div>
                </div>
            </div>
            <div class="card-footer text-center">
                <form asp-action="delete" asp-controller="home" asp-route-id="@Model.Id" method="post">
                    <a asp-controller="home" asp-action="index" class="btn btn-primary">Back</a>
                    <a asp-controller="home" asp-action="edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>