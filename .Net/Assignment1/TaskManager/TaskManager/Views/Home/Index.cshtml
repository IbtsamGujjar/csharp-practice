@model IEnumerable<TaskManager.Models.Task>
@{
    ViewBag.Title = "Task List";
}

<form asp-action="index" asp-controller="home" method="get">
    <div class="input-group mb-3">
        <input type="text" name="search" class="form-control" placeholder="Search Task" aria-label="Search Task" aria-describedby="button-addon2">
        <div class="input-group-append">
            <button type="submit" class="btn btn-primary" id="button-addon2">Search</button>
        </div>
    </div>
</form>
<div class="card-deck">
    @foreach (var task in Model)
    {
        <div class="card m-3">
            <div class="card-header text-center">
                <h3>
                    <a class="text-capitalize text-black-50 text-decoration-none m-1" asp-controller="home" asp-action="edit" asp-route-id="@task.Id">@task.Title</a>
                </h3>
            </div>
            <div class="card-body">
                @task.Description
                <div class="row">
                    <div class="col-sm">
                        Status: @task.Status
                    </div>
                    <div class="col-sm">
                        Priorty: @task.Priorty
                    </div>
                </div>
            </div>
            <div class="card-footer text-center">
                <form asp-controller="home" asp-action="delete" asp-route-id="@task.Id" method="post">
                    <a class="btn btn-primary m-1" asp-controller="home" asp-action="details" asp-route-id="@task.Id">View</a>
                    <a class="btn btn-primary m-1" asp-controller="home" asp-action="edit" asp-route-id="@task.Id">Edit</a>
                    <button type="submit" class="btn btn-danger m-1">Delete</button>
                </form>
            </div>
        </div>
    }
</div>